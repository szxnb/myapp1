/* pages/statistics/statistics.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F8F8F8;
  width: 100%;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 卡片通用样式 */
.stats-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 25rpx;
  padding: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

/* 概览卡片样式 */
.summary-content {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  width: 100%;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33%;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.summary-value {
  font-size: 46rpx;
  font-weight: bold;
  color: #E8593E;
  margin-bottom: 10rpx;
}

.summary-label {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  width: 100%;
}

/* 视图切换样式 */
.view-selector {
  display: flex;
  background-color: #FFFFFF;
  margin-bottom: 25rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
}

.view-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
  position: relative;
}

.view-tab.active {
  background-color: #E8593E;
  color: #FFFFFF;
  font-weight: bold;
}

/* 图表样式 */
.chart {
  padding: 20rpx 0;
  width: 100%;
}

.chart-container {
  height: 400rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  width: 100%;
  overflow-x: auto;
}

.chart-columns {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  height: 350rpx;
  width: 100%;
  min-width: 100%;
}

.chart-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 14%;
  min-width: 70rpx;
}

.column-value {
  width: 70%;
  max-width: 50rpx;
  background-color: #E8593E;
  border-radius: 6rpx 6rpx 0 0;
  transition: height 0.5s;
  box-shadow: 0 2rpx 6rpx rgba(232, 89, 62, 0.3);
}

.column-label {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #999;
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 5rpx;
  box-sizing: border-box;
}

.chart-legend {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  width: 100%;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 15rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  background-color: #E8593E;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.legend-label {
  font-size: 24rpx;
  color: #666;
}

/* 历史记录样式 */
.history-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.history-list {
  flex: 1;
  width: 100%;
}

.history-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
  width: 100%;
}

.history-date {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.history-value {
  font-size: 28rpx;
  color: #E8593E;
  margin-right: 20rpx;
  font-weight: bold;
}

.history-time {
  font-size: 28rpx;
  color: #666;
  text-align: right;
  min-width: 80rpx;
}

.no-data {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
  width: 100%;
} 